/* style.qss - Modern polished look for Cookie Management System */

/* General background */
QMainWindow {
    background-color: #1e1e1e;
    color: white;
}

QLabel, QGroupBox, QCheckBox, QComboBox, QLineEdit {
    color: white;
    font-size: 14px;
}

/* Table styling */
QTableWidget {
    background-color: #1e1e1e;
    alternate-background-color: #2a2a2a;
    color: white;
    gridline-color: #444;
    selection-background-color: #3d8ec9;
}

/* Read Cookies button */
QPushButton#pushButton_readcookies {
    background-color: #2196F3;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-weight: bold;
}

/* Analyse Cookies button */
QPushButton#pushButton_analysecookies {
    background-color: #FFA500;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-weight: bold;
}

/* Delete Selected button */
QPushButton#pushButton_deleteSelected {
    background-color: #f44336;
    color: white;
    padding: 6px 12px;
    border-radius: 6px;
    font-weight: bold;
}

/* Delete Cookies button */
QPushButton#pushButton_deletecookies {
