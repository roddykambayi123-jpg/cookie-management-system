/* Summary panel (TextEdit) */
QTextEdit#textSummary {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                                stop:0 #2a2a2a, stop:1 #3e3e3e);
    color: white;
    border: 1px solid #555;
    border-radius: 6px;
    padding: 10px;
    font-size: 14px;
}

/* CheckBox styling */
QCheckBox::indicator {
    border: 1px solid white;
    background-color: #2a2a2a;
    width: 16px;
    height: 16px;
}
QCheckBox::indicator:checked {
    background-color: #00c853;
}

/* Category badges (optional stylings to inject manually) */
